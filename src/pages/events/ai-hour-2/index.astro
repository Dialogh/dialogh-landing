const seo = {
  title: "AI Hour 2: Real Talk About Working With AI — Dialogh",
  description: "Join a free, small-group online discussion on Feb 13, 2026 at 9 PM IST. Designers, developers, writers & students share honest AI experiences — no corporate fluff. 15–20 spots only.",
  url: "https://dialogh.in/events/ai-hour-2",
  ogImage: "https://d8it4huxumps7.cloudfront.net/uploads/images/opportunity/banner/6984ec192fa14_the-ai-hour-2-open-discussion-on-ai-in-practice.png?d=1920x557",
  ogType: "article",
  keywords: "AI discussion, AI tools, ChatGPT, Claude, Midjourney, Copilot, designers, developers, online event, free event, Dialogh, AI Hour, community event",
  jsonLd: {
    "@context": "https://schema.org",
    "@type": "Event",
    "name": "AI Hour 2: Real Talk About Working With AI",
    "description": "An open discussion for anyone who uses AI tools in their work — honest takes, no corporate fluff. Share practical experiences across design, development, writing, and more.",
    "startDate": "2026-02-13T21:00:00+05:30",
    "endDate": "2026-02-13T22:00:00+05:30",
    "eventStatus": "https://schema.org/EventScheduled",
    "eventAttendanceMode": "https://schema.org/OnlineEventAttendanceMode",
    "location": {
      "@type": "VirtualLocation",
      "url": "https://dialogh.in/events/ai-hour-2"
    },
    "image": "https://d8it4huxumps7.cloudfront.net/uploads/images/opportunity/banner/6984ec192fa14_the-ai-hour-2-open-discussion-on-ai-in-practice.png?d=1920x557",
    "organizer": {
