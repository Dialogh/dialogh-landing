---

<Layout
  title={seo.title}
  description={seo.description}
  url={seo.url}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  keywords={seo.keywords}
  jsonLd={seo.jsonLd}
>
  <main class="min-h-dvh bg-primary">
    <!-- Hero — full viewport, dark background -->
    <div class="min-h-dvh w-full flex flex-col px-4 sm:px-6 lg:px-8 pb-8 max-w-7xl mx-auto">

      <!-- Inline light header -->
      <nav class="relative z-10 flex items-center justify-between py-3 sm:py-4">
        <a href="/" class="flex items-center gap-2 text-secondary/50 hover:text-secondary/80 transition-colors duration-200">
          <Image
            src={Logo}
            alt="Dialogh Logo"
            class="inline-block w-5 h-5 sm:w-6 sm:h-6 brightness-0 invert opacity-50"
          />
          <span class="sr-only">dialogh</span>
        </a>

        <ul class="flex space-x-4 lg:space-x-6 items-center">
          <li>
            <a href="https://dsc.gg/dialogh" target="_blank" rel="noopener noreferrer" class="transition-colors duration-200">
              <Icon class="text-secondary/50 hover:text-secondary/80 sm:w-5.5 sm:h-6 w-5 h-5 transition-colors duration-200" name="simple-icons:discord" />
            </a>
          </li>
          <li>
            <a href="https://www.instagram.com/dialogh.in/" target="_blank" rel="noopener noreferrer" class="transition-colors duration-200">
              <Icon class="text-secondary/50 hover:text-secondary/80 sm:w-5 h-5 w-5 transition-colors duration-200" name="simple-icons:instagram" />
            </a>
          </li>
          <li>
            <a href="https://www.linkedin.com/company/dialogh-community/" target="_blank" rel="noopener noreferrer" class="transition-colors duration-200">
