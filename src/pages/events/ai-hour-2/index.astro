        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="https://luma.com/4w30x4gd?tk=G8O4xH"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-secondary text-primary py-3 px-8 rounded-full font-medium text-sm transition-all duration-200 hover:bg-secondary/90 inline-flex items-center gap-2 justify-center"
