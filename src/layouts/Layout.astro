---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content="Dialogh - Community for tech enthusiasts" />
    <meta
      name="description"
      content="Join Dialogh, the ultimate online community for designers and developers. Connect, collaborate, and learn with like-minded professionals through engaging projects, workshops, and events. Become part of a thriving network of creators today!"
    />
    <meta name="author" content="Dialogh" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://dialogh.in" />
    <meta
      property="og:title"
      content="Dialogh - Community for tech enthusiasts"
    />
    <meta
      property="og:description"
      content="Join Dialogh, the ultimate online community for designers and developers. Connect, collaborate, and learn with like-minded professionals through engaging projects, workshops, and events. Become part of a thriving network of creators today!"
    />
    <meta property="og:image" content="https://dialogh.in/og.png" />
    <meta property="og:site_name" content="Dialogh" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://dialogh.in" />
    <meta
      name="twitter:title"
      content="Dialogh - Community for tech enthusiasts"
    />
    <meta
      name="twitter:description"
      content="Join Dialogh, the ultimate online community for designers and developers. Connect, collaborate, and learn with like-minded professionals through engaging projects, workshops, and events. Become part of a thriving network of creators today!"
    />
    <meta name="twitter:image" content="https://dialogh.in/og.png" />
    <meta name="twitter:creator" content="@dialogh_in" />

    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#00000" />
    <meta
      name="keywords"
      content="tech community, developers, designers, collaboration, projects, workshops, events, creators, coding, programming, web development, UI/UX, innovation"
    />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <meta name="language" content="English" />

    <!-- Links -->
    <link rel="canonical" href="https://dialogh.in" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link
      href="https://fonts.cdnfonts.com/css/pp-neue-montreal"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/lenis@1.1.19/dist/lenis.css"
    />

    <!-- Scripts -->
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="0c560206-7fba-45d9-9f57-5d1870738ef1"></script>
    <script src="https://unpkg.com/lenis@1.1.19/dist/lenis.min.js"></script>
    <script is:raw>
      document.addEventListener("DOMContentLoaded", () => {
        if (typeof Lenis !== "undefined") {
          const lenis = new Lenis({
            autoRaf: true,
            anchors: true,
          });
        }
      });
    </script>
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #000000;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  body {
    font-family:
      "PP Neue Montreal",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Helvetica,
      Arial,
      sans-serif,
      "Apple Color Emoji",
      "Segoe UI Emoji";
  }
</style>
