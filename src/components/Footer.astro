import Discord from "./icons/discord.astro";
import Linkedin from "./icons/linkedin.astro";
import Instagram from "./icons/instagram.astro";
---

<footer class="text-white w-full">
  <div class="flex items-center justify-between">
    <span class="xl:text-6xl lg:text-4xl md:text-2xl text-xl ">Connect. Collaborate. Create.</span>
    <div class="flex gap-4 items-center">
      <a href="https://dsc.gg/dialogh" target="_blank">
        <Discord class="size-8 hover:cursor-pointer" />
      </a>
      <a href="https://instagram.com/dialogh.in" target="_blank" class="">
        <Instagram class="size-8 hover:cursor-pointer" />
      </a>
      <a href="" class="opacity-50">
        <Linkedin class="size-8 hover:cursor-pointer" />
      </a>
    </div>
  </div>
</footer>
