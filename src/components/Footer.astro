---
// Footer component with social links and accessible navigation
import { Image } from "astro:assets";
import Logo from "../assets/logo.svg";
import { Icon } from "astro-icon/components";
---

<footer
  role="contentinfo"
  aria-label="Site footer"
  class="relative w-full rounded-2xl overflow-hidden"
  style="background: linear-gradient(to bottom, transparent 0%, rgba(255,255,255,0.4) 30%, rgba(245,242,236,0.95) 100%);"
>
  <!-- Large decorative wordmark -->
  <span class="uppercase hidden md:block text-[#6765631A] w-full md:text-[2vw] lg:text-[23vw] text-center select-none">Dialogh</span>

  <!-- Main footer content -->
  <div class="max-w-5xl w-full mx-auto px-5 sm:px-8 py-8 sm:py-10">
    <!-- Top row: logo + socials -->
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-2.5 text-[#1a1a1a] hover:text-black transition-colors" aria-label="Dialogh homepage">
        <Image src={Logo} alt="Dialogh logo" class="w-6 h-6 sm:w-7 sm:h-7" />
        <span class="font-semibold text-lg sm:text-xl">dialogh</span>
      </a>

      <div class="flex items-center gap-1">
        <a href="https://dsc.gg/dialogh" target="_blank" rel="noopener noreferrer" aria-label="Dialogh on Discord" class="text-[#1a1a1a]/50 hover:text-[#5865F2] transition-colors p-2">
          <Icon name="simple-icons:discord" class="w-[18px] h-[18px] sm:w-5 sm:h-5" />
        </a>
        <a href="https://www.instagram.com/dialogh.in/" target="_blank" rel="noopener noreferrer" aria-label="Dialogh on Instagram" class="text-[#1a1a1a]/50 hover:text-[#E4405F] transition-colors p-2">
          <Icon name="simple-icons:instagram" class="w-[18px] h-[18px] sm:w-5 sm:h-5" />
        </a>
        <a href="https://www.linkedin.com/company/dialogh-community/" target="_blank" rel="noopener noreferrer" aria-label="Dialogh on LinkedIn" class="text-[#1a1a1a]/50 hover:text-[#0A66C2] transition-colors p-2">
          <Icon name="simple-icons:linkedin" class="w-[18px] h-[18px] sm:w-5 sm:h-5" />
        </a>
        <a href="mailto:dialogh-community@gmail.com" aria-label="Email Dialogh" class="text-[#1a1a1a]/50 hover:text-[#EA4335] transition-colors p-2">
          <Icon name="simple-icons:gmail" class="w-[18px] h-[18px] sm:w-5 sm:h-5" />
        </a>
        <a href="https://chat.whatsapp.com/D5gc4u5IAneLK7fmI2o7EP" target="_blank" rel="noopener noreferrer" aria-label="Dialogh on WhatsApp" class="text-[#1a1a1a]/50 hover:text-[#25D366] transition-colors p-2">
          <Icon name="simple-icons:whatsapp" class="w-[18px] h-[18px] sm:w-5 sm:h-5" />
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-[#1a1a1a]/8 my-6"></div>

    <!-- Bottom row: nav links + copyright -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
      <nav aria-label="Footer navigation">
        <ul class="flex flex-wrap gap-x-5 gap-y-2 text-[13px] sm:text-sm text-[#1a1a1a]/50">
          <li><a href="/community-guidelines" class="hover:text-[#1a1a1a] transition-colors">Community guidelines</a></li>
          <li><a href="/privacy" class="hover:text-[#1a1a1a] transition-colors">Privacy policy</a></li>
          <li><a href="/events/ai-hour-2" class="hover:text-[#1a1a1a] transition-colors">Events</a></li>
        </ul>
      </nav>

      <p class="text-[13px] sm:text-sm text-[#1a1a1a]/35">
        &copy; <time datetime={new Date().getFullYear().toString()}>{new Date().getFullYear()}</time> dialogh.in
      </p>
    </div>
  </div>
</footer>

<script type="module">
  document.addEventListener('astro:page-load', () => {
    document.querySelectorAll('a[target="_blank"]').forEach(a => {
      if (!a.rel.includes('noopener')) a.rel += ' noopener';
      if (!a.rel.includes('noreferrer')) a.rel += ' noreferrer';
    });
  });
</script>
