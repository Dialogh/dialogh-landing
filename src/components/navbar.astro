<style>
  /* From Uiverse.io by Madflows */
  .button {
    position: relative;
    overflow: hidden;
    height: 3rem;
    padding: 0 1.5rem;
    border-radius: 1.5rem;
    background: #413f50;
    background-size: 400%;
    color: #fff;
    border: none;
    cursor: pointer;
    font-weight: 400;
  }

  .button:hover::before {
    transform: scaleX(1);
  }

  .button-content {
    position: relative;
    z-index: 1;
  }

  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    transform: scaleX(0);
    transform-origin: 0 50%;
    width: 100%;
    height: inherit;
    border-radius: inherit;
    background: linear-gradient(82.3deg, #ffa7e1 10.8%, #312dd1 94.3%);
    transition: all 0.475s;
  }
</style>
