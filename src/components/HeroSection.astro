---
import { Image } from "astro:assets";
import BgVector1 from "../assets/images/Vector.webp";
import CountdownTimer from "./CountdownTimer.astro";
import EmailSignup from "./EmailSignup.astro";
import ScrollDownButton from "./ScrollDownButton.astro";
import Email from "./Email.astro";
---

<div class="bg-secondary rounded-xl w-full h-full relative overflow-hidden">
  <Email />

  <div
    class="absolute bottom-25 flex items-center justify-center inset-0 z-0 px-4 lg:bottom-35"
  >
    <CountdownTimer />
    <Image
      fetchpriority={"high"}
      src={BgVector1}
      loading="eager"
      decoding={"async"}
      alt="Background Vector"
      class="mb-4 absolute md:w-lg"
    />
  </div>
  <div class="absolute bottom-2 mx-auto w-full px-4">
    <EmailSignup />
    <ScrollDownButton />
  </div>
</div>
